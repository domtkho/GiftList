<div class="container-fluid">
  <div class="row">
    <div class="col-md-2 sidebar-left">
        <h2 class="wishlist-title"><%= current_user.name.split(" ")[0]%>s List</h2>
      <img src="https://graph.facebook.com/<%= current_user.uid %>/picture?width=300&height=300" alt="" class="sidebar-profile-image">

      <div class="wish-list-container">
  <!--       <div class="btn btn-success" ng-click="loadWishList()">Refresh</div> -->
        <div id="dd-elements" class="clearfix animated shake">
          <div id="drop-target-one">
            I <i class="fa fa-heart"></i> THIS
          </div>
        </div>
        <div ng-repeat="wanted_item in wish_lists">
        <button type="button" ng-click="removeItemFromWishList(wanted_item.id)" class="close"><span aria-hidden="true">Ã—</span><span class="sr-only">Close</span></button>
          <div class="item-container">
            <span>{{ wanted_item.item.name }}</span>

            <span class="pull-right">{{ wanted_item.item.price | currency }}</span>
          </div>
        </div>


        <div class="see-more"><a ng-href="/my_wish_list">Show list</a></div>
      </div>

    </div>

    <div class="col-md-8 col-md-offset-2 main-section">
      <div ng-view></div>
    </div>

    <div class="col-md-2 sidebar-right">
      <h2 class="friend-title">Friends</h2>
      <div ng-repeat="friend in friends">
        <div class="friend-container">
          <span><img ng-src="{{ friend.image }}" alt="friend profile image" class="friend-thumbnail"></span>
          <span class="friend-name"><a ng-href="/wishlist/{{ friend.id }}">{{ friend.name }}</a></span>
        </div>
      </div>
    </div>

  </div>
</div>